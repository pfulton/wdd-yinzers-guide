-# Depending on where you are (homepage or 'internal' page), assign a class to the body element
- bodyclass = (current_path == "index.html") ? 'home' : 'internal'
!!! 5
%html{ :lang => "en" }
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %title
      = current_page.data.title + " | A Yinzer's Guide to Pittsburgh"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "keywords"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    = stylesheet_link_tag 'main'
  %body{:class => bodyclass}

    = partial "partials/_site-header"

    %main.main-content{role: 'main'}
      .container
        = yield

    = partial "partials/_site-footer"
